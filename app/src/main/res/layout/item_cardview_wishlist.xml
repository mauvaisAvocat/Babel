<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    android:id="@+id/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_card_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/relojarena"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wl_idproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID PRODUCT: "
                android:textSize="14sp"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/tv_wl_nameproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME PRODUCT: "
                android:textSize="14sp"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/tv_wl_priceproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRICE PRODUCT: "
                android:textSize="14sp"
                android:layout_weight="4"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_wl_descproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION PRODUCT: "
            android:textSize="14sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>