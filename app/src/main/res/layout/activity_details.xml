<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:background="#4C4949"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/babellogo"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Detalles del producto"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAGO"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/arrow"
            android:textStyle="bold"
            android:onClick="btnPago"/>

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/cards"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/pago_tv"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textAlignment="gravity"/>

        <Button
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENVÃOS"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/arrow"
            android:textStyle="bold"
            android:onClick="btnEnvio"/>

        <TextView
            android:id="@+id/envio_tv"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>